    "protractor": "~7.0.0",
    "selenium-webdriver": "^4.29.0",
    "ts-node": "~10.9.2",
    "typescript": "^5.7.3"
  },
  "eslintConfig": {
    "extends": "@iqb/eslint-config",
    "parserOptions": {
      "project": "./tsconfig.base.json"
    },
    "overrides": [
      {
        "files": [
          "e2e-tests/**/*.ts"
        ],
        "rules": {
          "@typescript-eslint/no-unused-expressions": [
            "error",
            {
              "allowTaggedTemplates": true
            }
          ],
          "newline-per-chained-call": [
            "off"
          ]
        },
        "plugins": [
          "html"
        ]
      }
    ]
