{
  "name": "verona-modules-stars",
  "version": "0.7.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iqb-berlin/verona-modules-nemo"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "validate-data": "validate-json cypress/fixtures/deutsch/interaction-buttons stars-unit-definition 1.2",
    "build": "ng build --configuration production --output-hashing=none",
    "postbuild": "node projects/tools/distpacker.js dist/stars-player/browser index_packed.html",
    "e2e": "npx cypress run",
    "cy:open": "cypress open --browser chrome cypress/e2e/deutsch/interaction-find-on-image",
    "test": "start-server-and-test start http://localhost:4200 cy:open"
  },
  "dependencies": {
    "@angular/animations": "^21.1.1",
    "@angular/cdk": "^21.1.1",
    "@angular/common": "^21.1.1",
    "@angular/compiler": "^21.1.1",
    "@angular/core": "^21.1.1",
    "@angular/forms": "^21.1.1",
    "@angular/platform-browser": "^21.1.1",
    "@angular/platform-browser-dynamic": "^21.1.1",
    "@iqbspecs/response": "~1.5.1",
    "lottie-web": "^5.13.0",
    "ngx-lottie": "^20.0.0",
    "rxjs": "~7.8.2"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^21.1.0",
    "@angular-eslint/eslint-plugin": "^21.1.0",
    "@angular-eslint/eslint-plugin-template": "^21.1.0",
    "@angular-eslint/schematics": "^21.1.0",
    "@angular-eslint/template-parser": "^21.1.0",
    "@angular/build": "^21.1.1",
    "@angular/cli": "~21.1.1",
    "@angular/compiler-cli": "^21.1.1",
    "@iqb/eslint-config": "^2.2.0",
    "@iqbspecs/validate-json": "^0.4.0",
    "@types/node": "^22.13.4",
    "@typescript-eslint/parser": "~8.53.1",
    "@typescript-eslint/utils": "~8.53.1",
    "chromedriver": "~144.0.0",
    "cypress": "~15.9.0",
    "eslint": "~9.39.2",
    "eslint-config-airbnb-typescript": "~18.0.0",
    "eslint-config-prettier": "~10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.32.0",
    "htmlhint": "^1.8.0",
    "prettier": "^3.8.1",
    "selenium-webdriver": "^4.40.0",
    "start-server-and-test": "^2.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "eslintConfig": {
    "extends": "@iqb/eslint-config",
    "parserOptions": {
      "project": "./tsconfig.base.json"
    },
    "rules": {
      "@typescript-eslint/quotes": [
        "error",
        "single"
      ]
    },
    "overrides": [
      {
        "files": [
          "e2e-tests/**/*.ts"
        ],
        "rules": {
          "@typescript-eslint/no-unused-expressions": [
            "error",
            {
              "allowTaggedTemplates": true
            }
          ],
          "newline-per-chained-call": [
            "off"
          ]
        },
        "plugins": [
          "html"
        ]
      }
    ]
  }
}
